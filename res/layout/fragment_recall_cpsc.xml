<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    
	    <TextView android:id="@+id/recall_organization"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_number"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_date"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_url"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_manufacturers"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_types"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_descriptions"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_upcs"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_hazards"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_countries"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	</LinearLayout>
</ScrollView>