<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <TextView android:id="@+id/recall_list_item_idTextView"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
    	android:paddingLeft="4dp"
    	android:paddingRight="4dp"
    	android:text="Recall id"
    	/>

    <TextView android:id="@+id/recall_list_item_dateTextView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/recall_list_item_idTextView"
		android:paddingLeft="4dp"
		android:paddingRight="4dp"
		android:paddingTop="4dp"
		android:text="Recall date"
		/>
    
    <TextView android:id="@+id/recall_list_item_summaryTextView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/recall_list_item_dateTextView"
		android:paddingLeft="4dp"
		android:paddingRight="4dp"
		android:paddingTop="4dp"
		android:text="Recall description"
		/>
    
</RelativeLayout>
