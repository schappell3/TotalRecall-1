<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    
	    <TextView android:id="@+id/recall_organization"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_number"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_date"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_url"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_description"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_summary"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	</LinearLayout>
</ScrollView>