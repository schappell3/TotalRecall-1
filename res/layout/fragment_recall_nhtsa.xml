<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    
	    <TextView android:id="@+id/recall_organization"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_number"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_date"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_url"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_records"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_manufacturer_campaign_number"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_component_description"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_manufacturer"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_code"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_potential_units_affected"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_initiator"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_report_date"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_defect_summary"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_consequence_summary"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_corrective_summary"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_notes"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	    <TextView android:id="@+id/recall_recall_subject"
	 		android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="?android:listSeparatorTextViewStyle"
	    	/>
	</LinearLayout>
</ScrollView>